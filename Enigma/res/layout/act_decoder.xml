<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
	style="@style/Fill"
    a:paddingLeft="@dimen/act_gutter_padding_left"
    a:paddingRight="@dimen/act_gutter_padding_right"
    a:background="@drawable/bg">
    
    <ImageView a:id="@+id/message_logo" a:layout_centerHorizontal="true" a:src="@drawable/ic_logo" a:paddingBottom="20dp"/>
	
	<TextView a:id="@+id/message_txt" a:background="#ffffff" a:textSize="22sp" a:gravity="center" a:layout_below="@+id/message_logo" a:hint="Enter your secret message" a:minLines="5" style="@style/Fill.Width" a:layout_marginRight="@dimen/act_gutter_padding_right" a:layout_marginLeft="@dimen/act_gutter_padding_left"/>
	
	<Button a:id="@+id/message_btn_reply" a:layout_below="@+id/message_txt" a:textSize="22sp" a:text="Reply >" style="@style/Fill.Width" />
</RelativeLayout>
